[{
  "name": "${container_name}",
  "image": "${image}",
  "networkMode": "awsvpc",

  "environment": [
    {
    "name": "ENV",
    "value": "${environment}"
     },
      {"name": "LOG_LEVEL",
      "value": "${log_level}"
      }
    ],
  "secrets": [
      {
        "name": "DB_HOST",
        "valueFrom": "${writer_secret_arn}/host"
      },
       {
        "name": "DATABASE",
        "valueFrom": "${writer_secret_arn}/dbname"
      },
       {
        "name": "DB_USER",
        "valueFrom": "${writer_secret_arn}/username"
      },
       {
        "name": "DB_PASSWORD",
        "valueFrom": "${writer_secret_arn}/password"
      },
       {
        "name": "DB_PORT",
        "valueFrom": "${writer_secret_arn}/port"
      },
      {
        "name": "DB_HOST_RO",
        "valueFrom": "${reader_secret_arn}/host"
      },
       {
        "name": "DATABASE_RO",
        "valueFrom": "${reader_secret_arn}/dbname"
      },
       {
        "name": "DB_USER_RO",
        "valueFrom": "${reader_secret_arn}/username"
      },
       {
        "name": "DB_PASSWORD_RO",
        "valueFrom": "${reader_secret_arn}/password"
      },
       {
        "name": "DB_PORT_RO",
        "valueFrom": "${reader_secret_arn}/port"
      }
    ],
  "portMappings": [
      {
        "containerPort": ${container_port},
        "hostPort": ${container_port}
      }
      ],
  "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
      "awslogs-group": "${log_group}",
      "awslogs-region": "${aws_region}",
      "awslogs-stream-prefix": "${container_name}"
    }
  }
}]
